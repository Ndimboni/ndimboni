# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
# Use 'sqlite' for SQLite or 'postgres' for PostgreSQL
DB_TYPE=sqlite
DB_NAME=./data/ndimboni.db

# Option 1: PostgreSQL with DATABASE_URL (recommended for production/cloud deployments)
# Uncomment the line below and comment out individual DB_* variables
# DATABASE_URL=postgresql://username:password@localhost:5432/ndimboni
# Examples:
# DATABASE_URL=postgresql://postgres:password@localhost:5432/ndimboni
# DATABASE_URL=postgres://user:pass@host:port/dbname?sslmode=require (for cloud providers)

# Option 2: PostgreSQL with individual components (for local development)
# Uncomment and configure when using PostgreSQL without DATABASE_URL
# DB_HOST=localhost
# DB_PORT=5432
# DB_USERNAME=postgres
# DB_PASSWORD=password
# DB_NAME=ndimboni
# DB_SSL=false

# Database Migration & Schema Configuration
# DB_SYNCHRONIZE: Auto-sync schema (true/false) - use true for development, false for production
# DB_MIGRATIONS_RUN: Auto-run migrations on startup (true/false) - use true for production
# DB_LOGGING: Enable SQL query logging (true/false)
# DB_DROP_SCHEMA: Drop and recreate schema on startup (true/false) - DANGER: Use only for development
DB_SYNCHRONIZE=true
DB_MIGRATIONS_RUN=false
DB_LOGGING=false
DB_DROP_SCHEMA=false

# JWT Configuration
JWT_SECRET=ndimboni-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# Email/SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Upload Configuration
UPLOAD_DESTINATION=./uploads
MAX_FILE_SIZE=5242880
# Max file size in bytes (5MB = 5 * 1024 * 1024)

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Admin User Configuration (for automatic seeding)
ADMIN_EMAIL=admin@ndimboni.com
ADMIN_PASSWORD=admin123
ADMIN_NAME=Admin User

# Moderator User Configuration (for automatic seeding)
MODERATOR_EMAIL=moderator@ndimboni.com
MODERATOR_PASSWORD=moderator123
MODERATOR_NAME=Moderator User

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your-bot-token-from-@BotFather
TELEGRAM_WEBHOOK_URL=https://your-domain.com/api/telegram/webhook
TELEGRAM_ADMIN_CHAT_IDS=123456789,987654321
TELEGRAM_ALLOWED_GROUPS=
TELEGRAM_MODERATION_ENABLED=true
TELEGRAM_AUTO_DELETE_DELAY=5

# URL Scanning API Configuration
VIRUSTOTAL_API_KEY=your-virustotal-api-key
GOOGLE_SAFE_BROWSING_API_KEY=your-google-safe-browsing-api-key

# WhatsApp Bot Configuration
WHATSAPP_BOT_TOKEN=your-whatsapp-bot-token
WHATSAPP_PHONE_NUMBER_ID=your-whatsapp-phone-number-id
WHATSAPP_API_VERSION=v22.0
WHATSAPP_WEBHOOK_URL=https://your-domain.com/api/whatsapp/webhook

